.new-date{
  width: 100%;
  height: 100%;
  background:url(https://free.liaoningdoupo.com/files/bg-x.png) no-repeat 0 0;
  background-size:100% 100%;
  overflow:auto;
  /* padding:20rpx 20rpx; */
}
.list-item{
  width: 92%;
  height: 250rpx;
  background:url(https://free.liaoningdoupo.com/files/border1.png) no-repeat 0 0;
  background-size:100% 100%;
  color:#fff;
  font-size: 28rpx;
  margin:20rpx auto;
  display: flex;
  justify-content: flex-start;
  align-items: center;

}
.user-info{
  display: flex;
  flex-direction: column;
}
.item-r{
  width:80%;
}
.item-l{
  margin-left:40rpx;
  width:120rpx;
  height: 120rpx;
}
.info-t{
  display: flex;
  justify-content: space-between;
  border-bottom:1px solid #fff;
  padding-bottom:20rpx;
  padding-right: 40rpx;
  padding-left:20rpx
}
.user-font{
  font-size: 8px;
  display: inline-block;
  margin-left: 5rpx;
}
.info-b{
  display: flex;
  justify-content: space-between;
  padding:30rpx;
}
.tz{
  width: 150rpx;
  height: 40rpx;
  line-height: 40rpx;
  background:rgba(0,0,0,.3);
  border-radius: 25px;
  text-align: center;
  font-size: 8px;
}
.logo{
  width: 70%;
  height: 70rpx;
  margin:60rpx auto;
}