/* pages/challenge/challenge.wxss */
.challenge{
  width: 100%;
  height: 100%;
  background:url(https://free.liaoningdoupo.com/files/pk-bg.png) no-repeat 0 0;
  background-size:100% 100%;
  display:flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  color:#fff;
  font-size:40rpx;
}
.pk-user{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}
.user-l, .user-r{
  width: 28%;
  height: 140rpx;
  line-height: 140rpx;
  background: url(https://free.liaoningdoupo.com/files/hf.png);
  background-size:100% 100%;
  font-size: 30rpx;
  /* padding:0 40rpx; */
  display: flex;
  align-items: center;
}
.user-header{
  width: 80rpx;
  height: 80rpx;
}
.user-l text{
  margin-left: 40rpx;
  margin-right: 15rpx;
}
.user-r{
  background: url(https://free.liaoningdoupo.com/files/lf.png);
  background-size:100% 100%;
  padding-left: 30rpx;
}
.user-r text{
  margin-left: 15rpx;
}
.user-c{
  background:#fff;
  width:180rpx;
  height: 80rpx;
  border-radius: 25rpx;
  text-align: center;
  line-height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.time{
  width:160rpx;
  height: 70rpx;
  background:#9a00ff;
  border-radius: 25rpx;
  font-size: 32rpx;
}
.isSuccess{
  display: flex;
  justify-content: center;
  align-items: center;
}
.isSuccess-image{
  background:url(https://free.liaoningdoupo.com/files/sl.png);
  background-size: 100% 100%;
  width:600rpx;
  height: 300rpx;
  text-align: center;
  line-height: 248rpx;
  margin-top:80rpx;
  font-size: 50rpx;
  color:#faf7f3b0;
  position: relative;
}
.low .isSuccess-image{
  background:url(https://free.liaoningdoupo.com/files/shu.png);
  background-size: 100% 100%;
}
.isSuccess-image text{
  position: absolute;
  bottom:-60rpx;
  left: 0;
  right: 0;
}
.info{
  font-size: 34rpx;
  text-align: center;
  color:#f9a038;
  margin:20rpx 0;
  font-weight: 600;
}
.sum{
  text-align: center;
  font-size: 34rpx;
}
.btns{
  position: fixed;
  bottom:200rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.btns view{
  width:80%;
  height: 100rpx;
  border-radius: 16rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 6000;
}
.go-on{
  background: #fff;
  color:#000;
  margin-bottom:40rpx;
}
.show{
  background: #f9a038;
}