/* pages/login/login.wxss */
.login-content{
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  position: relative;
  background: url(https://free.liaoningdoupo.com/files/login-bg.png) no-repeat 0 0;
  background-position: 0px 0px;
  background-size: 100% 100%;
}
.login-bg{
  position: absolute;
  width: 750rpx;
  height: 100%;
}
.login-box{
  position: relative;
  z-index: 1;
  padding-top:200rpx;
}
.logo{
  width:450rpx;
  height: 88rpx;
  margin:0 auto;
  
}
.login-text{
  padding:60rpx 20rpx;
  color:#fddb6f;
  font-size:70rpx;
  text-align: center;
  line-height:40px;
}
.register-btn{
  width:372rpx;
  height: 151rpx;
  margin:0 auto;
}
.login-item{
  position: relative;
  display: flex;
  justify-content: flex-start;
  align-items : center;
  border-bottom:1px solid #656565;
  color:#5e5e5e;
  font-size:13px;
  margin-bottom:50rpx;
}
.login-item .van-cell{
  background:#f5f5f5;
}
.fx-item:last-child{
  border-bottom: none;
}
.item-icon{
  width: 60rpx;
  height: 60rpx;
  margin-left: 10rpx;
}
.sub-text{
  font-size:24rpx;
  position: absolute;
  right: -8px;
  bottom:36rpx;

}
.fx-item{
  padding:20rpx 0;
  color:#484848;
  font-size:30rpx;
  border-bottom:1px solid #484848;
}
.fx-popup .van-fade-enter-active,.fx-popup .van-fade-leave-active {
  background-color: rgba(0, 0, 0, 0) !important;
}
.login-btn{
  width: 80%;
  height: 70rpx;
  margin:0 auto;
  text-align: center;
  line-height: 70rpx;
  color:#fff;
  font-size:32rpx;
  margin-top:40rpx;
  font-weight: 500;
  background: url(http://gsyh.scleysion.com:888/files/login-btn.png) no-repeat 0 0;
  background-size: 100% 100%;
}
.login-radio{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size:28rpx;
  color:#1f1f1f;
}
.ysxy{
  color:#9b0303;
  font-size:28rpx;
}